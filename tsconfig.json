{
  "compilerOptions": {
    "outDir": "./dist",            // Where to place compiled files
    "declaration": true,           // Generate .d.ts files
    "declarationDir": "./dist",    // Put .d.ts files in dist as well
    "rootDir": "./src",            // Your source code is under src/
    "module": "ESNext",            // Match your desired module system
    "target": "ESNext",            // Match your desired JS target
    "strict": true,                // Enable strict type checking
    "moduleResolution": "bundler",    
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,     // Allow importing JSON files
    "types": [
      "bun-types" 
    ],        // For compatibility with commonjs modules
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "composite": true,
    "paths": {
      "@finogeeks/actgent": ["./src/index"],
      "@finogeeks/actgent/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["test/**/*", "node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}