{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "../dist-test",
    "noEmit": true,
    "types": ["bun-types"],
    "tsBuildInfoFile": "../dist-test/.tsbuildinfo",
    "paths": {
      "@finogeek/actgent": ["../src/index"],
      "@finogeek/actgent/*": ["../src/*"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "references": [
    { "path": "../" }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-test"
  ]
}
